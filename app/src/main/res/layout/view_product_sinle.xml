<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/imagenMostrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="imagen"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/nombreMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/precioMostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚¬"
            android:textSize="17sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tallaMostrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Talla"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/fotoMostrar"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_cesta"
            android:layout_width="136dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:backgroundTint="#1A38DD"
            app:srcCompat="@drawable/cesta" />

        <ImageView
            android:id="@+id/imageview_favoritos"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/favoritos" />

    </LinearLayout>

</LinearLayout>
