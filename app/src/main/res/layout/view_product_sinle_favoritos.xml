<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/nombreMostrarFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/precioMostrarFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textview_euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚¬"
                android:textSize="17sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/imagenMostrarFavoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imagen"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageview_eliminar_favoritos"
            android:layout_width="54dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/eliminar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>