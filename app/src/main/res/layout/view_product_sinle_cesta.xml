<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/nombreMostrarCesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/precioMostrarCesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚¬"
            android:textSize="17sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tallaMostrarCesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Talla"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/stockMostrarCesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/fotoMostrarCesta"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <ImageView
        android:id="@+id/imageview_eliminar_cesta"
        android:layout_width="54dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/eliminar" />

</LinearLayout>
