<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/nombreMostrarManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/precioMostrarManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â‚¬"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/imagenMostrarManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imagen"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_eliminar_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:text="Eliminar"
            android:drawableLeft="@drawable/eliminar"/>

        <Button
            android:id="@+id/button_editar_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar"
            android:drawableLeft="@drawable/mostrar"/>
    </LinearLayout>

</LinearLayout>
